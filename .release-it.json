{
  "git": {
    "commitMessage": "🔖 release: v${version}"
  },
  "github": {
    "release": true
  },
  "npm": {
    "publish": false
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "infile": "CHANGELOG.md",
      "preset": {
        "name": "conventionalcommits",
        "types": [
          {
            "type": "✨ use case",
            "section": "Novas Funcionalidades (Casos de Uso)"
          },
          {
            "type": "🌐 domain",
            "section": "Novas Funcionalidades (Domínio)"
          },
          {
            "type": "📶 rest",
            "section": "Novas Funcionalidades (API REST)"
          },
          {
            "type": "🖥️ ui",
            "section": "Novas Funcionalidades (Interface de Usuário)"
          },
          {
            "type": "💾 db",
            "section": "Novas Funcionalidades (Banco de Dados)"
          },
          {
            "type": "🎞️ queue",
            "section": "Novas Funcionalidades (Filas)"
          },
          {
            "type": "🐛 fix",
            "section": "Correções de Bugs"
          },
          {
            "type": "🚑 hotfix",
            "section": "Hotfixes Críticos"
          },
          {
            "type": "♻️ refactor",
            "section": "Refatorações"
          },
          {
            "type": "📚 docs",
            "section": "Documentação"
          },
          {
            "type": "📦 deps",
            "section": "Atualização de Dependências"
          },
          {
            "type": "🧪 test",
            "section": "Testes",
            "hidden": true
          },
          {
            "type": "⚙️ config",
            "section": "Configurações",
            "hidden": true
          },
          {
            "type": "🧰 provision",
            "section": "Provisionamento",
            "hidden": true
          },
          {
            "type": "📟 server",
            "section": "Servidor",
            "hidden": true
          },
          {
            "type": "📑 interface",
            "section": "Interfaces",
            "hidden": true
          },
          {
            "type": "🏷️ type",
            "section": "Tipagem",
            "hidden": true
          },
          {
            "type": "🎴 assets",
            "section": "Assets",
            "hidden": true
          },
          {
            "type": "🔀 merge",
            "section": "Merges",
            "hidden": true
          },
          {
            "type": "⏪ revert",
            "section": "Reversões"
          },
          {
            "type": "🗃️ ftree",
            "section": "Estrutura de Arquivos",
            "hidden": true
          },
          {
            "type": "📜 cert",
            "section": "Certificados",
            "hidden": true
          },
          {
            "type": "🚧 wip",
            "section": "Trabalho em Progresso",
            "hidden": true
          },
          {
            "type": "🚚 cd",
            "section": "Continuous Delivery",
            "hidden": true
          },
          {
            "type": "🏎️ ci",
            "section": "Continuous Integration",
            "hidden": true
          },
          {
            "type": "🔖 release",
            "section": "Releases",
            "hidden": true
          },
          {
            "type": "🐳 docker",
            "section": "Docker",
            "hidden": true
          }
        ]
      }
    }
  }
}
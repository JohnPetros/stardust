{
  "name": "stardust",
  "description": "Aplicação para a aprendizagem de lógica de programação",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=20"
  },
  "packageManager": "npm@10.8.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build:server": "turbo build --filter=@stardust/server && ./scripts/replace-packages-imports.sh",
    "build:web": "turbo build --filter=@stardust/web",
    "lint": "turbo lint",
    "test": "turbo test",
    "typecheck": "turbo typecheck"
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "supabase": "^2.22.12",
    "ts-jest-mocker": "^1.3.0",
    "turbo": "^2.4.0"
  }
}
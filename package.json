    "build:web": "turbo build --filter=@stardust/web",
    "lint": "turbo lint",
    "test": "turbo test",
    "check-types": "turbo check-types",
    "prepare": "husky",
    "release": "./scripts/release.sh",
    "changelog": "./scripts/update-changelog.sh"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.3",
